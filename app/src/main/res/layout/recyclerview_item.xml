<?xml version="1.0" encoding="utf-8" ?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <com.daimajia.swipe.SwipeLayout xmlns:swipe="http://schemas.android.com/apk/res-auto"
        android:id="@+id/swipe"
        android:layout_width="match_parent"
        android:layout_height="95dp"

        swipe:leftEdgeSwipeOffset="0dp"
        android:layout_marginTop="19dp"
        swipe:rightEdgeSwipeOffset="0dp">
        <LinearLayout
            android:tag="Bottom2"
            android:layout_width="wrap_content"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/edit"
                android:src="@drawable/ic_baseline_edit_24"
                android:layout_width="70dp"
                android:background="@color/translucent_green"
                android:paddingLeft="25dp"
                android:paddingRight="25dp"
                android:layout_height="match_parent" />
            <ImageView
                android:id="@+id/trash"
                android:src="@drawable/ic_baseline_delete_sweep_24"
                android:layout_width="70dp"
                android:background="@color/translucent_red"
                android:paddingLeft="25dp"
                android:paddingRight="25dp"
                android:layout_height="match_parent" />
        </LinearLayout>


        <RelativeLayout
            android:id="@+id/idrelalayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"


            android:orientation="horizontal"
            android:background="@android:color/transparent"
            android:weightSum="100">

            <Switch
                android:id="@+id/swEnableEvent"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/dateweek"
                android:layout_marginLeft="15dp"

                android:background="@drawable/rounded_cornersw"
                android:visibility="gone"></Switch>

            <TextView
                android:id="@+id/date"
                android:layout_width="65dp"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_marginLeft="13dp"
                android:layout_marginTop="10dp"
                android:alpha="1"


                android:text="30/12"


                android:textColor="@color/black"
                android:textSize="21dp"></TextView>

            <TextView
                android:id="@+id/dateweek"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/date"
                android:layout_marginLeft="28dp"
                android:layout_marginTop="-8dp"
                android:alpha="0.8"
                android:text="T4"
                android:textColor="@color/white"
                android:textSize="20dp"></TextView>

            <TextView
                android:id="@+id/tv1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/dateweek"
                android:layout_marginLeft="8dp"
                android:layout_marginTop="0dp"
                android:alpha="0.8"
                android:text="T4"
                android:textColor="@color/white"
                android:textSize="13dp"></TextView>
            <TextView

                android:id="@+id/colormatch"
                android:layout_width="50dp"
                android:layout_height="96dp"
                android:layout_marginLeft="80dp"

                android:layout_marginTop="0dp"
                android:background="@drawable/roundedleft"></TextView>

            <View
                android:layout_width="match_parent"
                android:layout_height="120dp"
                android:layout_marginTop="0dp"
                android:layout_marginLeft="90dp"
                android:background="@color/graydarkmode"
                android:visibility="visible"></View>


            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"

                android:layout_marginLeft="80dp"
                android:background="@android:color/darker_gray"
                android:visibility="gone" />


            <TextView
                android:id="@+id/tv2"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:layout_marginLeft="90dp"
                android:layout_marginTop="0dp"
                android:background="@android:color/transparent"
                android:paddingLeft="14dp"
                android:paddingTop="3dp"

                android:text="thông tin môn học\nline 2"

                android:textColor="@color/translucent_white"

                android:textSize="17dp"


                ></TextView>


            <TextView

                android:id="@+id/tvInfo"
                android:layout_width="match_parent"
                android:layout_height="52dp"
                android:layout_below="@+id/tv2"
                android:layout_marginLeft="90dp"
                android:layout_marginTop="-5dp"

                android:background="@android:color/transparent"
                android:paddingLeft="14dp"
                android:text="mô tả môn học"
                android:textColor="@color/translucent_white"

                android:textSize="14dp"


                >


            </TextView>


            <TextView
                android:id="@+id/tvidOfevent"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="id"
                android:textColor="@color/black"
                android:visibility="gone">

            </TextView>

            <TextView
                android:id="@+id/tvsstartAt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="tvsstartat"
                android:textColor="@color/black"
                android:visibility="gone">

            </TextView>

            <TextView
                android:id="@+id/tvendat"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="tvssendat"
                android:textColor="@color/black"
                android:visibility="gone">

            </TextView>


        </RelativeLayout>



    </com.daimajia.swipe.SwipeLayout>
</LinearLayout>
