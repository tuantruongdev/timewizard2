<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"

    card_view:cardBackgroundColor="@android:color/transparent"
    card_view:cardElevation="0dp"

    >


    <RelativeLayout
        android:id="@+id/idrelalayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"




        android:orientation="horizontal"
        android:background="@android:color/transparent"
        android:weightSum="100">

        <Switch
            android:id="@+id/swEnableEvent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/dateweek"
            android:layout_marginLeft="15dp"

            android:background="@drawable/rounded_cornersw"
            android:visibility="gone"></Switch>

        <TextView
            android:id="@+id/date"
            android:layout_width="40dp"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="20dp"

            android:gravity="center"
            android:text="1"

            android:padding="5dp"
            android:shadowColor="#cf1d1d"
            android:shadowDx="0.0"
            android:shadowDy="0.0"
            android:shadowRadius="8"


            android:textColor="@color/red_300"
            android:textSize="30dp"></TextView>

        <TextView
            android:id="@+id/dateweek"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/date"
            android:layout_marginLeft="28dp"
            android:layout_marginTop="-8dp"
            android:alpha="0.8"
            android:text="T4"
            android:textColor="@color/white"
            android:textSize="20dp"></TextView>

        <TextView
            android:id="@+id/tv1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/dateweek"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="0dp"
            android:alpha="0.8"
            android:text="T4"
            android:textColor="@color/white"
            android:textSize="13dp"></TextView>
        <TextView

            android:id="@+id/colormatch"
            android:layout_width="50dp"
            android:layout_height="96dp"
            android:layout_marginLeft="80dp"

            android:layout_marginTop="19dp"
            android:background="@drawable/roundedleft"></TextView>

        <View
            android:layout_width="match_parent"
            android:layout_height="96dp"
            android:layout_marginTop="19dp"
            android:layout_marginLeft="90dp"
            android:background="@color/graydarkmode"
            android:visibility="visible"></View>



        <TextView
            android:id="@+id/tv2"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginLeft="90dp"
            android:layout_marginTop="19dp"
            android:background="@android:color/transparent"
            android:paddingLeft="14dp"
            android:paddingTop="3dp"

            android:text="thông tin môn học\nline 2"

            android:textColor="@color/translucent_white"

            android:textSize="17dp"


            ></TextView>




        <TextView

            android:id="@+id/tvInfo"
            android:layout_width="match_parent"
            android:layout_height="52dp"
            android:layout_below="@+id/tv2"
            android:layout_marginLeft="90dp"
            android:layout_marginTop="-5dp"

            android:background="@android:color/transparent"
            android:paddingLeft="14dp"
            android:text="mô tả môn học"
            android:textColor="@color/translucent_white"

            android:textSize="14dp"


            >





        </TextView>


        <TextView
            android:id="@+id/tvidOfevent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="id"
            android:textColor="@color/black"
            android:visibility="gone">

        </TextView>

        <TextView
            android:id="@+id/tvsstartAt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="tvsstartat"
            android:textColor="@color/black"
            android:visibility="gone">

        </TextView>

        <TextView
            android:id="@+id/tvendat"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="tvssendat"
            android:textColor="@color/black"
            android:visibility="gone">

        </TextView>


    </RelativeLayout>
</androidx.cardview.widget.CardView>