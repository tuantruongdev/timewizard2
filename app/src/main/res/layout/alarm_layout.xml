<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    android:id="@+id/relaalarmlayout"
    >
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"

        android:layout_marginLeft="20dp"
        android:background="@android:color/darker_gray"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="06:55"
        android:textColor="@android:color/darker_gray"
        android:textSize="50dp"
        android:layout_marginLeft="20dp"

        android:id="@+id/Timeview"
        ></TextView>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@android:color/darker_gray"
        android:text="12:55"
        android:textSize="30dp"
        android:layout_marginLeft="10dp"
        android:layout_below="@+id/startSleep"
        android:id="@+id/startSleepTime"
       android:layout_marginTop="-10dp"
        android:layout_toRightOf="@id/Timeview"
        ></TextView>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="(5 chu kỳ)"
        android:textSize="17dp"
        android:layout_marginLeft="5dp"
        android:textColor="@color/yellowIos"

        android:layout_below="@+id/startSleep"
        android:id="@+id/chuky"
        android:layout_toRightOf="@id/startSleepTime"

        ></TextView>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@android:color/darker_gray"
        android:text="Bắt đầu ngủ :"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"
        android:textSize="15dp"
        android:layout_toRightOf="@id/Timeview"
        android:id="@+id/startSleep"
        ></TextView>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/Timeview"
        android:layout_marginTop="-10dp"
        android:id="@+id/descview"
        android:textColor="@android:color/darker_gray"
        android:text="Báo thức, mọi ngày thường"
        android:textSize="15dp"
        android:layout_marginLeft="20dp"

        ></TextView>

    <Switch
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"

        android:layout_alignParentEnd="true"
        android:layout_marginTop="30dp"
        android:layout_marginEnd="5dp"
        android:id="@+id/swalarm"
        android:gravity="right">


    </Switch>
</RelativeLayout>